<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="@dimen/dimen3"
    app:cardCornerRadius="@dimen/dimen8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen10">

        <TextView
            android:id="@+id/tv_word"
            android:drawableLeft="@drawable/ic_sort_by_alpha_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen18"
            android:textStyle="bold"
            android:textColor="@color/colorLightOrange"
            android:text="kata"/>

        <TextView
            android:layout_below="@id/tv_word"
            android:id="@+id/tv_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginRight="@dimen/dimen10"
            android:textSize="@dimen/dimen15"
            android:textStyle="bold"
            android:textColor="@color/colorLightOrange"
            android:text="kata"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>