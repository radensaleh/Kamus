<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="250dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:textSize="@dimen/dimen35"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nomina"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textStyle="italic"
        android:textSize="@dimen/dimen18" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:outlineSpotShadowColor="@color/colorWhite"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:outlineAmbientShadowColor="@color/colorWhite"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/waiting"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginTop="@dimen/dimen5"
        android:textSize="@dimen/dimen12"
        android:textColor="@color/colorWhite"/>

</LinearLayout>